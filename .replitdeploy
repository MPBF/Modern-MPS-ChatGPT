# Replit Deployment Configuration
# This file configures how the application is deployed on Replit

[deployment]
# Build command - prepares the application for production
build = "npm run build:production"

# Start command - runs the application in production
run = "npm start"

# Exclude files from deployment
exclude = [
  "node_modules/.cache",
  "*.log", 
  ".env.local",
  "migrations/meta",
  "scripts/test-*",
  "client/src/**/*.test.*"
]

# Environment variables required for deployment
[deployment.env]
NODE_ENV = "production"
DATABASE_URL = "required"

# Health check configuration
[deployment.health]
path = "/api/health"
timeout = 30
interval = 10