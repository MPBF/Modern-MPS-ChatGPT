# Replit Deployment Configuration
# This file specifies how the application should be deployed

# Build configuration
[build]
command = "npm run build"
publicDir = "dist/client"

# Runtime configuration
[deploy]
command = "npm start"

# Environment variables needed for deployment
[env]
NODE_ENV = "production"
# DATABASE_URL will be provided by Replit's database service

# Health check endpoint
[health]
path = "/api/health"